<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Root menu shown in the app switcher -->
    <menuitem id="estate_menu_root" name="Real Estate" sequence="10"/>

    <!-- First level menu in the top bar under Real Estate -->
    <menuitem id="estate_menu_advertisements" name="Advertisements" parent="estate_menu_root" sequence="10"/>

    <!-- Action menu linking to the window action created earlier -->
    <menuitem id="estate_menu_properties" parent="estate_menu_advertisements" action="estate_property_action" sequence="10"/>

    <!-- Settings menu and child menu for property types -->
    <menuitem id="estate_menu_settings" name="Settings" parent="estate_menu_root" sequence="20"/>
    <menuitem id="estate_menu_property_types" name="Property Types" parent="estate_menu_settings" action="estate_property_type_action" sequence="10"/>
    <menuitem id="estate_menu_property_tags" name="Property Tags" parent="estate_menu_settings" action="estate_property_tag_action" sequence="20"/>
</odoo>
